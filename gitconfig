[user]
  name = Alex Smith
  email = alex.geoffrey.smith@gmail.com
[color]
  ui = auto
[alias]
  ci = commit -v
  co = checkout
  di = diff
  dc = diff --cached
  st = status
  br = branch
  aa = add --all
  fa = fetch --all
  standup = shortlog --since=yesterday

  # Fancy logging from Gary Bernhardt.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
[core]
  editor = vim
[push]
  default = current
