[user]
  name = Alex Smith
  email = ags@fastmail.fm

[core]
  editor = nvim
	excludesfile = ~/.gitignore

[color]
  ui = auto

[push]
  default = current

[rerere]
  enabled = true

[merge]
	conflictstyle = diff3

[status]
	showUntrackedFiles = all

[branch "master"]
  mergeoptions = --no-ff

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[alias]
  aa = add --all
  br = branch
  ci = commit -v
  co = checkout
  dc = diff --cached
  di = diff
  fa = fetch --all
  rc = rebase --continue
  rod = rebase -i origin/develop
  rom = rebase -i origin/master
  st = status -sb
  
  # Fancy logging from Gary Bernhardt.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
