[user]
  name = Alex Smith
  email = ags@fastmail.fm

[core]
  editor = nvim
	excludesfile = ~/.gitignore
	attributesfile = /Users/ags/.gitattributes

[init]
	defaultBranch = main

[color]
  ui = auto

[fetch]
  prune = true

[pull]
  ff = only

[push]
  default = current

[rerere]
  enabled = true

[merge]
	conflictstyle = diff3

[status]
	showUntrackedFiles = all

[branch "master"]
  mergeoptions = --no-ff

[branch "main"]
  mergeoptions = --no-ff

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[alias]
  tidy = !git branch --merged | grep -Ev \"(^\\*|main|master|develop)\" | xargs -n 1 git branch -d
  pt = !git pull origin main && git tidy
  aa = add --all
  bv = branch -v
  ci = commit -v
  co = checkout
  dc = diff --cached
  di = diff
  fa = fetch --all
  plog = log --graph --pretty=format:'%C(auto,red)%h · %C(auto,magenta)%an · %C(auto,red)%cr · %C(auto)%s%C(auto,green)%d'
  rc = rebase --continue
  st = status -sb
  fff = !git fetch && git status && git merge --ff-only
  tidy = !git branch --merged | grep -Ev \"(^\\*|main|master|develop)\" | xargs -n 1 git branch -d
  pt = !git pull origin main && git tidy
